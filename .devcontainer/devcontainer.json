{
    "name": "RyuguGS Container",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "GS",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.pythonPath": "/usr/bin/python"
            }        
        }
    }
}
